<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.npkompleet.phenomenon.bowser.forms.FormPTNActivity"
    tools:showIn="@layout/activity_form_ptnquality">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fill And Submit Quality Check"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:id="@+id/ptnQual_title"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>



        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:focusable="false"
            android:hint="Quality - Check Date"
            android:id="@+id/ptnQual_date"
            app:layout_constraintTop_toBottomOf="@+id/ptnQual_title"
            android:layout_marginTop="4dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLength="20"
            android:hint="Quality - Batch No."
            android:id="@+id/ptnQual_batchNo"
            app:layout_constraintTop_toBottomOf="@+id/ptnQual_date"
            android:layout_marginTop="4dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:maxLength="20"
            android:hint="Quality - Temperature"
            android:id="@+id/ptnQual_temperature"
            app:layout_constraintTop_toBottomOf="@+id/ptnQual_batchNo"
            android:layout_marginTop="4dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:maxLength="20"
            android:hint="Quality - Specific Gravity"
            android:id="@+id/ptnQual_sg"
            app:layout_constraintTop_toBottomOf="@+id/ptnQual_temperature"
            android:layout_marginTop="4dp"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLength="20"
            android:hint="Quality - Colour"
            android:id="@+id/ptnQual_color"
            app:layout_constraintTop_toBottomOf="@+id/ptnQual_sg"
            android:layout_marginTop="4dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLength="100"
            android:hint="Quality - Test for Water"
            android:id="@+id/ptnQual_driver_name"
            app:layout_constraintTop_toBottomOf="@+id/ptnQual_color"
            android:layout_marginTop="4dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:focusable="false"
            android:hint="Delivery Date"
            android:id="@+id/ptnQual_delivery_date"
            app:layout_constraintTop_toBottomOf="@+id/ptnQual_driver_name"
            android:layout_marginTop="8dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="20"
            android:hint="PTN Quantity"
            android:id="@+id/ptnQual_quantity"
            app:layout_constraintTop_toBottomOf="@+id/ptnQual_delivery_date"
            android:layout_marginTop="4dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:focusable="false"
            android:hint="To Tank"
            android:id="@+id/ptnQual_toTank"
            app:layout_constraintTop_toBottomOf="@+id/ptnQual_quantity"
            android:layout_marginTop="4dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:focusable="false"
            android:hint="Compute Claimable loss"
            android:id="@+id/ptnQual_claimableLoss"
            app:layout_constraintTop_toBottomOf="@+id/ptnQual_toTank"
            android:layout_marginTop="4dp"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="20"
            android:hint="Haulage Dip 1"
            android:id="@+id/ptnQual_hDip1"
            app:layout_constraintTop_toBottomOf="@+id/ptnQual_claimableLoss"
            android:layout_marginTop="4dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="20"
            android:hint="Haulage Volume 1"
            android:id="@+id/ptnQual_hVol1"
            app:layout_constraintTop_toBottomOf="@+id/ptnQual_hDip1"
            android:layout_marginTop="4dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="20"
            android:hint="Haulage Dip 2"
            android:id="@+id/ptnQual_hDip2"
            app:layout_constraintTop_toBottomOf="@+id/ptnQual_hVol1"
            android:layout_marginTop="4dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="20"
            android:hint="Haulage Volume 2"
            android:id="@+id/ptnQual_hVol2"
            app:layout_constraintTop_toBottomOf="@+id/ptnQual_hDip2"
            android:layout_marginTop="4dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="20"
            android:hint="Haulage Dip 3"
            android:id="@+id/ptnQual_hDip3"
            app:layout_constraintTop_toBottomOf="@+id/ptnQual_hVol2"
            android:layout_marginTop="4dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="20"
            android:hint="Haulage Volume 3"
            android:id="@+id/ptnQual_hVol3"
            app:layout_constraintTop_toBottomOf="@+id/ptnQual_hDip3"
            android:layout_marginTop="4dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="20"
            android:hint="Haulage Dip 4"
            android:id="@+id/ptnQual_hDip4"
            app:layout_constraintTop_toBottomOf="@+id/ptnQual_hVol3"
            android:layout_marginTop="4dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="20"
            android:hint="Haulage Volume 4"
            android:id="@+id/ptnQual_hVol4"
            app:layout_constraintTop_toBottomOf="@+id/ptnQual_hDip4"
            android:layout_marginTop="4dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Product Type"
            android:focusable="false"
            android:id="@+id/ptnQual_productType"
            app:layout_constraintTop_toBottomOf="@+id/ptnQual_hVol4"
            android:layout_marginTop="4dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLength="100"
            android:hint="Seal Numbers"
            android:id="@+id/ptnQual_sealNo"
            app:layout_constraintTop_toBottomOf="@+id/ptnQual_productType"
            android:layout_marginTop="4dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="20"
            android:hint="Drain"
            android:id="@+id/ptnQual_drain"
            app:layout_constraintTop_toBottomOf="@+id/ptnQual_sealNo"
            android:layout_marginTop="4dp"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="20"
            android:hint="Meter Start"
            android:id="@+id/ptnQual_MeterStart"
            app:layout_constraintTop_toBottomOf="@+id/ptnQual_drain"
            android:layout_marginTop="4dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="20"
            android:hint="Dip Start"
            android:id="@+id/ptnQual_DipStart"
            app:layout_constraintTop_toBottomOf="@+id/ptnQual_MeterStart"
            android:layout_marginTop="4dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="20"
            android:hint="Dip Volume Start"
            android:id="@+id/ptnQual_DipVolStart"
            app:layout_constraintTop_toBottomOf="@+id/ptnQual_DipStart"
            android:layout_marginTop="4dp"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="20"
            android:hint="Meter End"
            android:id="@+id/ptnQual_MeterEnd"
            app:layout_constraintTop_toBottomOf="@+id/ptnQual_DipVolStart"
            android:layout_marginTop="4dp"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="20"
            android:hint="Dip End"
            android:id="@+id/ptnQual_DipEnd"
            app:layout_constraintTop_toBottomOf="@+id/ptnQual_MeterEnd"
            android:layout_marginTop="4dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="20"
            android:hint="Dip Volume End"
            android:id="@+id/ptnQual_DipVolEnd"
            app:layout_constraintTop_toBottomOf="@+id/ptnQual_DipEnd"
            android:layout_marginTop="4dp"/>



        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:minLines="2"
            android:maxLength="250"
            android:hint="Comment"
            android:id="@+id/ptnQual_comment"
            app:layout_constraintTop_toBottomOf="@+id/ptnQual_DipVolEnd"
            android:layout_marginTop="4dp"/>


