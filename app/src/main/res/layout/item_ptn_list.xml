<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:id="@+id/ptn_list_print"
            app:srcCompat="@drawable/ic_print"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!--<ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:id="@+id/ptn_list_quality"
            app:srcCompat="@drawable/ic_quality"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/ptn_list_print"/>-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start"
            android:id="@+id/ptn_list_bowserFrom"
            android:textColor="#000000"
            app:layout_constraintTop_toBottomOf="@id/ptn_list_print"
            app:layout_constraintStart_toStartOf="parent"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ptn_list_amount"
            android:text="500LTRS"
            android:textColor="#000044"
            android:textSize="10dp"
            app:layout_constraintTop_toBottomOf="@+id/ptn_list_bowserFrom"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>