<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.npkompleet.phenomenon.bowser.forms.FormPTNActivity"
    tools:showIn="@layout/activity_form_ptn">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fill And Submit LMF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:id="@+id/lmf_title"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:focusable="false"
            android:hint="Date"
            android:id="@+id/lmf_date"
            app:layout_constraintTop_toBottomOf="@+id/lmf_title"
            android:layout_marginTop="8dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:focusable="false"
            android:hint="Product Type"
            android:id="@+id/lmf_productType"
            app:layout_constraintTop_toBottomOf="@+id/lmf_date"
            android:layout_marginTop="4dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:focusable="false"
            android:hint="From-Storage"
            android:id="@+id/lmf_fromStorage"
            app:layout_constraintTop_toBottomOf="@+id/lmf_productType"
            android:layout_marginTop="8dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:maxLength="20"
            android:hint="From-Drain"
            android:id="@+id/lmf_fromDrain"
            app:layout_constraintTop_toBottomOf="@+id/lmf_fromStorage"
            android:layout_marginTop="4dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:maxLength="20"
            android:hint="Meter Start"
            android:id="@+id/lmf_meterStart"
            app:layout_constraintTop_toBottomOf="@+id/lmf_fromDrain"
            android:layout_marginTop="4dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:focusable="false"
            android:hint="Time Start"
            android:id="@+id/lmf_timeStart"
            app:layout_constraintTop_toBottomOf="@+id/lmf_meterStart"
            android:layout_marginTop="4dp"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:maxLength="20"
            android:hint="From-Dip Start"
            android:id="@+id/lmf_fromDipStart"
            app:layout_constraintTop_toBottomOf="@+id/lmf_timeStart"
            android:layout_marginTop="4dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:maxLength="20"
            android:hint="From-Dip Volume Start"
            android:id="@+id/lmf_fromDipVolStart"
            app:layout_constraintTop_toBottomOf="@+id/lmf_fromDipStart"
            android:layout_marginTop="4dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:maxLength="20"
            android:hint="Meter End"
            android:id="@+id/lmf_meterEnd"
            app:layout_constraintTop_toBottomOf="@+id/lmf_fromDipVolStart"
            android:layout_marginTop="4dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:hint="Time End"
            android:id="@+id/lmf_timeEnd"
            app:layout_constraintTop_toBottomOf="@+id/lmf_meterEnd"
            android:layout_marginTop="4dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:maxLength="20"
            android:hint="From-Dip End"
            android:id="@+id/lmf_fromDipEnd"
            app:layout_constraintTop_toBottomOf="@+id/lmf_timeEnd"
            android:layout_marginTop="4dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:maxLength="20"
            android:hint="From-Dip Volume End"
            android:id="@+id/lmf_fromDipVolEnd"
            app:layout_constraintTop_toBottomOf="@+id/lmf_fromDipEnd"
            android:layout_marginTop="4dp"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:focusable="false"
            android:hint="To Storage"
            android:id="@+id/lmf_toStorage"
            app:layout_constraintTop_toBottomOf="@+id/lmf_fromDipVolEnd"
            android:layout_marginTop="4dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:maxLength="20"
            android:hint="To-Drain"
            android:id="@+id/lmf_toDrain"
            app:layout_constraintTop_toBottomOf="@+id/lmf_toStorage"
            android:layout_marginTop="4dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:maxLength="20"
            android:hint="To-Dip Start"
            android:id="@+id/lmf_toDipStart"
            app:layout_constraintTop_toBottomOf="@+id/lmf_toDrain"
            android:layout_marginTop="4dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:maxLength="20"
            android:hint="To-Dip Volume Start"
            android:id="@+id/lmf_toDipVolStart"
            app:layout_constraintTop_toBottomOf="@+id/lmf_toDipStart"
            android:layout_marginTop="4dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:maxLength="20"
            android:hint="To-Dip End"
            android:id="@+id/lmf_toDipEnd"
            app:layout_constraintTop_toBottomOf="@+id/lmf_toDipVolStart"
            android:layout_marginTop="4dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:maxLength="20"
            android:hint="To-Dip Volume End"
            android:id="@+id/lmf_toDipVolEnd"
            app:layout_constraintTop_toBottomOf="@+id/lmf_toDipEnd"
            android:layout_marginTop="4dp"/>

