<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.npkompleet.phenomenon.bowser.forms.FormADIActivity"
    tools:showIn="@layout/activity_form_adi">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fill And Submit ADI"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:id="@+id/adi_title"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:focusable="false"
            android:hint="Date"
            android:id="@+id/adi_date"
            app:layout_constraintTop_toBottomOf="@+id/adi_title"
            android:layout_marginTop="8dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:hint="ParkTime"
            android:focusable="false"
            android:id="@+id/adi_parkTime"
            app:layout_constraintTop_toBottomOf="@+id/adi_date"
            android:layout_marginTop="4dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="ADI No"
            android:id="@+id/adi_ADINo"
            app:layout_constraintTop_toBottomOf="@+id/adi_parkTime"
            android:layout_marginTop="4dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:focusable="false"
            android:hint="Bowser From"
            android:id="@+id/adi_bowserFrom"
            app:layout_constraintTop_toBottomOf="@+id/adi_ADINo"
            android:layout_marginTop="4dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLength="100"
            android:hint="Sales Location"
            android:id="@+id/adi_salesLocation"
            app:layout_constraintTop_toBottomOf="@+id/adi_bowserFrom"
            android:layout_marginTop="4dp"/>



        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:focusable="false"
            android:hint="Customer"
            android:id="@+id/adi_customer"
            app:layout_constraintTop_toBottomOf="@+id/adi_salesLocation"
            android:layout_marginTop="4dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLength="50"
            android:hint="Aircraft Type"
            android:id="@+id/adi_aircraftType"
            app:layout_constraintTop_toBottomOf="@+id/adi_customer"
            android:layout_marginTop="4dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLength="50"
            android:hint="Aircraft No"
            android:id="@+id/adi_aircraftNo"
            app:layout_constraintTop_toBottomOf="@+id/adi_aircraftType"
            android:layout_marginTop="4dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLength="20"
            android:hint="Flight From"
            android:id="@+id/adi_flightFrom"
            app:layout_constraintTop_toBottomOf="@+id/adi_aircraftNo"
            android:layout_marginTop="4dp"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLength="20"
            android:hint="Flight To"
            android:id="@+id/adi_flightTo"
            app:layout_constraintTop_toBottomOf="@+id/adi_flightFrom"
            android:layout_marginTop="4dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Product Type"
            android:focusable="false"
            android:id="@+id/adi_productType"
            app:layout_constraintTop_toBottomOf="@+id/adi_flightTo"
            android:layout_marginTop="4dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Package Type"
            android:focusable="false"
            android:id="@+id/adi_packageType"
            app:layout_constraintTop_toBottomOf="@+id/adi_productType"
            android:layout_marginTop="4dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:maxLength="20"
            android:hint="Specific Gravity"
            android:id="@+id/adi_specificGravity"
            app:layout_constraintTop_toBottomOf="@+id/adi_packageType"
            android:layout_marginTop="4dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:maxLength="20"
            android:hint="Temperature"
            android:id="@+id/adi_temperature"
            app:layout_constraintTop_toBottomOf="@+id/adi_specificGravity"
            android:layout_marginTop="4dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="20"
            android:hint="Bowser Meter Before"
            android:id="@+id/adi_bowserMeterStart"
            app:layout_constraintTop_toBottomOf="@+id/adi_temperature"
            android:layout_marginTop="4dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:focusable="false"
            android:hint="Time Before"
            android:id="@+id/adi_timeStart"
            app:layout_constraintTop_toBottomOf="@+id/adi_bowserMeterStart"
            android:layout_marginTop="4dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="20"
            android:hint="Bowser Meter After"
            android:id="@+id/adi_bowserMeterEnd"
            app:layout_constraintTop_toBottomOf="@+id/adi_timeStart"
            android:layout_marginTop="4dp"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:focusable="false"
            android:hint="Time After"
            android:id="@+id/adi_timeEnd"
            app:layout_constraintTop_toBottomOf="@+id/adi_bowserMeterEnd"
            android:layout_marginTop="4dp"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="20"
            android:hint="Aircraft Mass Before"
            android:id="@+id/adi_aircraftMassStart"
            app:layout_constraintTop_toBottomOf="@+id/adi_timeEnd"
            android:layout_marginTop="4dp"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="20"
            android:hint="Aircraft Mass After"
            android:id="@+id/adi_aircraftMassEnd"
            app:layout_constraintTop_toBottomOf="@+id/adi_aircraftMassStart"
            android:layout_marginTop="4dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:minLines="2"
            android:maxLength="150"
            android:hint="Comment"
            android:id="@+id/adi_comment"
            app:layout_constraintTop_toBottomOf="@+id/adi_aircraftMassEnd"
            android:layout_marginTop="4dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:minLines="2"
            android:maxLength="200"
            android:hint="Customer Name"
            android:id="@+id/adi_customerName"
            app:layout_constraintTop_toBottomOf="@+id/adi_comment"
            android:layout_marginTop="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Signature:"
            android:textSize="18sp"
            android:textColor="#000000"
            android:id="@+id/adi_signature_text"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/adi_customerName" />

        
        <com.github.gcacace.signaturepad.views.SignaturePad
            android:background="#dddddd"
            android:layout_width="198dp"
            android:layout_height="78dp"
            android:id="@+id/adi_signature"
            app:penMaxWidth="3dp"
            app:penMinWidth="2dp"
            app:layout_constraintTop_toBottomOf="@+id/adi_signature_text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/adi_signature"
            android:layout_marginTop="4dp">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="CLEAR"
                android:id="@+id/adi_signature_clear"
                android:background="#ff0000"
                android:onClick="clearSignature"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="ACCEPT"
                android:id="@+id/adi_signature_accept"
                android:background="#00ff00"/>

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

</ScrollView>
